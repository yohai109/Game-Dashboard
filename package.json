{
  "name": "watch",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "server": "tsx server/index.ts",
    "server:watch": "tsx watch server/index.ts",
    "start": "electron .",
    "dev:all": "concurrently -k -n client,server -c yellow,cyan \"npm:dev\" \"npm:server:watch\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "generate-icon": "node scripts/generate-icon.js"
  },
  "main": "tray.js",
  "dependencies": {
    "@fiahfy/ico-convert": "^0.0.12",
    "canvas": "^3.1.0",
    "electron": "^38.2.0",
    "express": "^4.21.2",
    "node-notifier": "^10.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "steamwidgets.js": "^2.0.3",
    "systeminformation": "^5.27.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/express": "^4.17.23",
    "@types/node": "^22.18.8",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
